    .modal_overlay
    .modal_content
      h1 TITLE
      img(src="sprites/room_movie.png")
  button#open1.btn(onmouseover='trip()' onmouseout='reImg()') TRIP
  .modal.hidden
    .modal_overlay
    .modal_content
      img(src="sprites/room_Trip.png")
  button#open2.btn(onmouseover='bed()' onmouseout='reImg()') SLEEP
  .modal.hidden
    .modal_overlay
    .modal_content
      img(src="sprites/room_Bed.png")
  button#open3.btn(onmouseover='music()' onmouseout='reImg()') MUSIC
  .modal.hidden
    .modal_overlay
    .modal_content
      img(src="sprites/room_Cafe.png")
script(src='sprites/popup.js')
.img
